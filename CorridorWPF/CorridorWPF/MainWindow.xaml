<Window x:Class="CorridorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorridorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="660.534" Width="1288.448" ResizeMode="NoResize">


    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Teachers Scedule">
                <Grid Background="#FFE5E5E5" Margin="0,5,0,-5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="131*"/>
                        <RowDefinition Height="125*"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="bdr_availability" BorderBrush="Black" BorderThickness="1" Margin="0,10,29,109" Background="LimeGreen" HorizontalAlignment="Right" Width="325" CornerRadius="60" Grid.RowSpan="2">
                        <Button x:Name="btn_toggleAvailable" Content="Unavailable" Margin="63,90,56,0" VerticalAlignment="Top" Height="67" BorderThickness="3" FontSize="26.667" FontWeight="Bold" Foreground="White" BorderBrush="#FF0D1393" Click="btn_toggleAvailable_Click" Background="Red"/>
                    </Border>
                    <TextBlock x:Name="txt_Availability" TextWrapping="Wrap" Text="You are available" Margin="0,46,71,173" FontSize="22.667" FontWeight="Bold" HorizontalAlignment="Right" Width="219"/>
                    <ComboBox x:Name="cb_selectTime" VerticalAlignment="Bottom" Margin="0,0,130,21" HorizontalAlignment="Right" Width="124" SelectedIndex="0" DropDownClosed="cb_selectTime_DropDownClosed">
                        <ComboBoxItem Content="Select time" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="00:10" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="00:20" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="00:30" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="00:40" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="00:50" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="01:00" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="01:30" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="02:00" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="03:00" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="04:00" HorizontalAlignment="Left" Width="122"/>
                        <ComboBoxItem Content="All day" HorizontalAlignment="Left" Width="122"/>


                    </ComboBox>
                    <Button x:Name="btn_setTime" Content="Set Time" Margin="0,0,130,195" HorizontalAlignment="Right" Width="124" Height="43" VerticalAlignment="Bottom" FontSize="14.667" FontWeight="Bold" BorderThickness="4" BorderBrush="#FFE5E5E5" Background="LimeGreen" Click="btn_setTime_Click" IsEnabled="False" Grid.Row="1"/>



                    <DataGrid x:Name="dGrid_teacherSchedule" Margin="0,20,359,10" AutoGenerateColumns="False" SelectionChanged="dGrid_teacherSchedule_SelectionChanged" Grid.RowSpan="2" SelectionMode="Single" SelectionUnit="Cell" HorizontalAlignment="Right" Width="905" >


                    </DataGrid>



                    <Button x:Name="btn_updateTeacherSchedule" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="97" Margin="1034,219,0,0" Click="btn_updateTeacherSchedule_Click" Grid.Row="1" Height="43"/>



                </Grid>

            </TabItem>
            <TabItem Header="Others Schedule">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="921" Margin="10,10,0,0" Height="557"/>
                </Grid>
            </TabItem>
            <TabItem Header="Staff TV">
                <Grid Background="#FFE5E5E5">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid x:Name="dGrid_staffNotes" 
                                  Margin="0,49,32,9" 
                                  HorizontalAlignment="Right" Width="294" 
                                  IsEnabled="False" 
                                  FontSize="16" 
                                  FontFamily="Georgia Pro Black" 
                                  FontWeight="Bold" 
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                  Height="546"/>
                        <Button x:Name="btn_supdateStaffTv" Content="Update" HorizontalAlignment="Right" Width="143" Margin="0,11,32,0" Click="btn_supdateStaffTv_Click" Height="33" VerticalAlignment="Top"/>
                        <ComboBox x:Name="cb_staffCorridors" HorizontalAlignment="Left" VerticalAlignment="Top" Width="152" Margin="10,21,0,0" SelectedIndex="0">
                            <ComboBoxItem Content="Corridor 1" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 2" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 3" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 4" HorizontalAlignment="Left" Width="150"/>
                        </ComboBox>
                        <DataGrid x:Name="dGrid_staff" 
                                  Margin="0,49,331,9" 
                                  IsEnabled="False" 
                                  Height="546" 
                                  FontSize="16" 
                                  FontFamily="Georgia Pro Black" 
                                  FontWeight="Bold"                                  
                                  ScrollViewer.CanContentScroll="False" 
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                  HorizontalAlignment="Right" 
                                  Width="935"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Student TV">
                <Grid Background="#FFE5E5E5">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid x:Name="dGrid_Student" HorizontalAlignment="Left" VerticalAlignment="Top" Width="944" Margin="10,48,0,0" Height="546"/>
                        <DataGrid x:Name="dGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="292" Margin="959,48,0,0" Height="546"/>
                        <Button x:Name="btn_updateStudentTv" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Margin="1108,10,0,0" Height="33" Click="btn_updateStudentTv_Click"/>
                        <ComboBox x:Name="cb_studentCorridors" HorizontalAlignment="Left" VerticalAlignment="Top" Width="152" Margin="10,21,0,0" SelectedIndex="0">
                            <ComboBoxItem Content="Corridor 1" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 2" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 3" HorizontalAlignment="Left" Width="150"/>
                            <ComboBoxItem Content="Corridor 4" HorizontalAlignment="Left" Width="150"/>
                        </ComboBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Admin Page">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="869*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="listBox1" Margin="33,73,576,10" Grid.ColumnSpan="2"/>
                    <ListBox x:Name="listBox1_Copy" Margin="0,73,168,10" HorizontalAlignment="Right" Width="295" Grid.Column="1"/>
                    <ComboBox x:Name="comboBox3" Margin="33,39,576,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="textBox" Height="23" Margin="0,39,168,0" TextWrapping="Wrap" Text="Search:" VerticalAlignment="Top" HorizontalAlignment="Right" Width="295" Grid.Column="1"/>
                    <Button x:Name="button4" Content="→" HorizontalAlignment="Right" Margin="0,171,468,0" VerticalAlignment="Top" Width="103" Height="69" FontSize="48" Grid.Column="1"/>
                    <Button x:Name="button4_Copy" Content="←" HorizontalAlignment="Right" Margin="0,245,468,0" VerticalAlignment="Top" Width="103" Height="70" FontSize="48" Grid.Column="1"/>
                    <Button x:Name="btn_addNewAccount" Content="Add new account" HorizontalAlignment="Left" Margin="751,39,0,0" VerticalAlignment="Top" Width="108" Height="23" Click="btn_addNewAccount_Click" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Login/logout">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
